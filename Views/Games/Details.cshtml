@model Game
@{
    ViewData["Title"] = Model.Name;
}

<div class="card border-secondary rounded-4 mt-4 overflow-hidden p-0">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 px-5 py-4 d-flex  flex-column justify-content-between">
                <div cite="p-3">
                    <h1 class="text-success fw-bolder fs-3">@Model.Name</h1>
                    <span class="badge bg-info fs-5">@Model.Categorey?.Name</span>
                    <p class="fs-5 text-muted">@Model.Description</p>
                </div>


                <div class="d-flex w-50 justify-content-center">
                    @foreach (var item in @Model.Devices)
                    {
                        <i class="@item.Device.Icone text-muted fs-5 mx-1"></i>
                    }
                </div>




                <div></div>

            </div>

            <div class="col-md-4">
                <img class="img-fluid " src="@($"{FileSetting.ImagesPath}/{Model.Cover}")" alt="Model.Name">
            </div>

        </div>

    </div>
</div>

