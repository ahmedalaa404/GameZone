@model IEnumerable<Game>

@{
    ViewData["Title"] = "Games Index";

}




@{
    ViewData["Title"] = "Index Game Page";
}
@{

    if (@Model is not null)
    {
        <div class="mt-5">
            <table class="table table-dark ">
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-1">
                            <td>
                                <div class="d-flex">
                                    <div class="Game-Source px-3">
                                        <img class="img-fluid " style="width:80px;height:100px" src="@($"{FileSetting.ImagesPath}/{item.Cover}")" alt="@item.Name">
                                    </div>
                                    <div class="d-flex flex-column justify-content-center text-center">
                                        <h4 class="text-light">@item.Name</h4>
                                        <h5 class="text-white-50">@item.Categorey.Name</h5>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle">
                                <div class="d-flex justify-content-end">
                                    <a asp-controller="Games" asp-route-id="@item.Id" asp-action="Details" class="btn btn-primary rounded rounded-3 me-2"><i class="bi bi-binoculars fs-4 mx-1"></i>View</a>
                                    <a asp-controller="Games" asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger rounded rounded-3 me-2"> <i class="bi bi-trash3-fill text-light"></i> Delete</a>
                                    <a asp-controller="Games" asp-route-id="@item.Id" asp-action="Update" class="btn btn-primary rounded rounded-3 me-2"> <i class="bi bi-pencil-square text-light mx-1"></i>Edite</a>
                                </div>
                            </td>


                        </tr>


                    }


                </tbody>

            </table>
        </div>
    }
    else
    {
        <div class="alert alert-dark mt-5">
            <h4 class="alert-heading">No Games Here</h4>
            <p class="mb-0"> No Games Add Yet.</p>
        </div>
    }


}